<%= fields model: @recipe do |form| %>
  <%= form.fields_for :recipe_steps, child_index: params[:index] do |recipe_step_form| %>
    <%= turbo_frame_tag "recipe_step_#{recipe_step_form.index}" do %>
      <%= recipe_step_form.hidden_field :id, value: params[:id] %>
      <%= recipe_step_form.hidden_field :_destroy, value: true %>
    <% end %>
  <% end %>
<% end %>
