<%= turbo_frame_tag "recipe_step_#{form.index}" do %>
  <%= form.hidden_field :id %>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <%= form.submit "destroy step", formaction: task_path(form.index, form.object.id),
                                  formmethod: :delete,
                                  formnovalidate: true,
                                  data: { turbo_frame: "task_#{form.index}" } %>
<% end %>